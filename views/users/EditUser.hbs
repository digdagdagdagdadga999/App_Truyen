<div style="margin-top: 50px; margin-left: 500px;">
    <div style="background-color: #FFFF66; padding: 30px; border-radius: 10px; width: 350px;">
        <form action="/edituser/{{users.id}}" method="post">
            <h2 class="text-center fw-bold text-black ">Cập nhật người dùng</h2>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Username:</label>
                <input type="text" class="form-control" id="username" name="username" style="width: 300px;"
                    value="{{users.username}}" required>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Password:</label>
                <input type="password" class="form-control" id="password" name="password" style="width: 300px;"
                    value="{{users.password}}" required>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">Email:</label>
                <input type="email" class="form-control" id="email" name="email" style="width: 300px;"
                    value="{{users.email}}" required>
            </div>
            <div class="mb-3">
                <label for="exampleFormControlInput1" class="form-label">FullName:</label>
                <input type="text" class="form-control" id="fullname" name="fullname" style="width: 300px;"
                    value="{{users.fullname}}" required>
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
                <button type="submit" class="btn btn-secondary"><a href="/getuser"
                        style="text-decoration: none;">Cancel</a></button>
            </div>
        </form>

    </div>

</div>